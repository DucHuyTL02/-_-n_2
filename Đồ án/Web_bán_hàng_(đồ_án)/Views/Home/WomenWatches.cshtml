@model IEnumerable<Web_bán_hàng__đồ_án_.Models.Product>

@{
    ViewBag.Title = "Đồng Hồ Nữ";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}



<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Đồng Hồ Nữ</title>
    <style>
        .container {
            width: 80%;
            margin: auto;
            font-family: Arial, sans-serif;
            text-align: center;
        }

        .product-row {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .product {
            border: 1px solid #ddd;
            padding: 10px;
            width: 22%;
            text-align: center;
        }

            .product img {
                width: 100%;
                height: auto;
            }

        .product-name {
            font-size: 1.2em;
            margin-top: 10px;
            margin-bottom: 5px;
        }

        .product-price {
            color: #e60000;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Danh Sách Đồng Hồ Nữ</h1>

        <!-- Khối ngang đầu tiên -->
        <div class="product-row">
            <div class="container">


                <!-- Khối chứa các sản phẩm -->
                @foreach (var pro in Model)

                {
                    <div class="product">
                        <a href="@Url.Action("ProductDetails", "Product", new { id = pro.ProductID })">
                            <img src="@Url.Content(pro.ProductImage)" alt="@pro.ProductName" />
                            <div class="product-name">@pro.ProductName</div>
                            <div class="product-price">@pro.ProductPrice.ToString("C")</div>
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Khối ngang thứ hai -->
        <div class="product-row">
            <div class="container">

                <!-- Khối chứa các sản phẩm -->
                @foreach (var pro in Model)

                {
                    <div class="product">
                        <a href="@Url.Action("ProductDetails", "Product", new { id = pro.ProductID })">
                            <img src="@Url.Content(pro.ProductImage)" alt="@pro.ProductName" />
                            <div class="product-name">@pro.ProductName</div>
                            <div class="product-price">@pro.ProductPrice.ToString("C")</div>
                        </a>
                    </div>
                }

            </div>
        </div>

        <!-- Khối ngang thứ ba -->
        <div class="product-row">
            <div class="container">

                <!-- Khối chứa các sản phẩm -->
                @foreach (var pro in Model)

                {
                    <div class="product">
                        <a href="@Url.Action("ProductDetails", "Product", new { id = pro.ProductID })">
                            <img src="@Url.Content(pro.ProductImage)" alt="@pro.ProductName" />
                            <div class="product-name">@pro.ProductName</div>
                            <div class="product-price">@pro.ProductPrice.ToString("C")</div>
                        </a>
                    </div>
                }

            </div>
        </div>

    </div>
</body>
</html>

