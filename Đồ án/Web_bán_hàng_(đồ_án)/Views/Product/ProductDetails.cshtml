@model List<Web_bán_hàng__đồ_án_.Models.Product>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Sản Phẩm</title>
    <style>
        .container {
            width: 80%;
            margin: auto;
            font-family: Arial, sans-serif;
        }

        .product-title {
            text-align: center;
            color: #333;
        }

        .product-content {
            display: flex;
            margin: 20px 0;
        }

        .product-image {
            flex: 1;
            max-width: 40%;
        }

        .product-info {
            flex: 2;
            padding-left: 20px;
        }

        .product-description {
            text-align: center;
            margin-bottom: 20px;
        }

        .price {
            font-size: 24px;
            color: #e60000;
            text-align: center;
            margin-bottom: 20px;
        }

        .add-to-cart, .installment {
            display: block;
            width: 60%;
            margin: 10px auto;
            padding: 10px;
            text-align: center;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            .add-to-cart:hover, .installment:hover {
                background-color: #0056b3;
            }

        .details-container {
            display: flex;
            margin-top: 20px;
        }

        .product-specs, .product-details {
            padding: 20px;
        }

        .product-specs {
            flex: 1;
            border-right: 1px solid #ddd;
        }

        .product-details {
            flex: 2;
        }

        .similar-products, .reviews {
            margin-top: 20px;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

            .reviews .review {
                margin-bottom: 10px;
            }
    </style>
</head>

<body>
    {
    @foreach (var itemm in Model)
    {
        <div class="container">
            <h1 class="product-title">@itemm.ProductName</h1>
            <div class="product-content">

                <img src="@itemm.ProductImage" alt="@itemm.ProductName" class="product-image">
                <div class="product-info"
                    <div class="product-description">
                        <p>
                            @itemm.ProductName
                        </p>
                        <p>Mã Số Sản Phẩm: OP990-45ADGS-GL-X</p>
                    </div>
                    <div class="price"> @itemm.ProductPrice</div>
                    <a href="add_to_cart_url" class="add-to-cart">THÊM VÀO GIỎ HÀNG</a>
                    <a href="installment_url" class="installment">Trả Góp Qua Thẻ (Visa, Master, JCB)</a>
                    </div>
                <div class="details-container">
                    <div class="product-specs">
                        <h3>Thông Số Sản Phẩm</h3>
                        <p>Thương Hiệu:  Olym Pianus</p>
                        <p>Số Hiệu Sản Phẩm: OP990-45ADGS-GL-X</p>
                        <p>Dành Cho: Nam</p>
                        <p>Vật Liệu: Kính Sapphire</p>
                        <p>Loại Máy: Cơ tự động</p>
                        <p>Thời Gian Bảo Hành: 2 năm</p>
                        <p>Dây Đeo: Dây cao su</p>
                        <p>Chức Năng: Lịch Ngày</p>
                        <p>Nơi Sản Xuất: Thụy Sĩ</p>
                    </div>
                    <div class="@itemm.ProductDescription">
                        <h3>Chi Tiết Sản Phẩm</h3>
                        <ơ>

                        </ơ>
                    </div>
                </div>
                }



                <div class="similar-products">
                    <h3>Sản Phẩm Tương Tự</h3>

                    @for (int i = 0; i < Model.Count && i < 4; i++)
                    {
                        var item = @Model[i];
                        <div class="product-item">
                            <img src="@item.ProductImage" alt="@item.ProductName" class="product-image" />
                            <h2>@item.ProductName</h2>
                            <p>@item.ProductDescription</p>
                            <p class="price">@item.ProductPrice</p>
                            <a href="@Url.Action("Details", "Watches", new { id = item.ProductID })" class="btn btn-primary">Xem Chi Tiết</a>
                        </div>
                    }


                    <div class="row">
                        <div class="col-md-3">
                            <a href="@Url.Action("Details", "Home")" style="text-decoration: none;">
                                <img src="~/Content/Image/1.jpg" class="img-fluid" alt="Đồng Hồ 1" style="width: 100%; height: auto;" />
                                <h5 style="text-align:center">ROlEX Vàng Nguyên Khối</h5>
                                <p style="text-align:center">Tissot Le Locle Powermatic 80 T006.407.16.033.00 – Nam – Automatic...</p>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("hai", "Watches")" style="text-decoration: none;">
                                <img src="~/Content/Image/123aaa-1712554045.jpg" class="img-fluid" alt="Đồng Hồ 2" style="width: 100%; height: auto;" />
                                <h5 style="text-align:center">Oriet-Nam</h5>
                                <p style="text-align:center">Đồng Hồ Orient - Nam RA-AR0001S30B (RA-AR0001S10B)...</p>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("ba", "Watches")" style="text-decoration: none;">
                                <img src="~/Content/Image/33.jpg" class="img-fluid" alt="Đồng Hồ 3" style="width: 100%; height: auto;" />
                                <h5 style="text-align:center">Olym Pianus</h5>
                                <p style="text-align:center">Đồng Hồ Olym Pianus - Nam OP990-45ADGS-GL-X...</p>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("bon", "Watches")" style="text-decoration: none;">
                                <img src="~/Content/Image/44.jpg" class="img-fluid" alt="Đồng Hồ 4" style="width: 100%; height: auto;" />
                                <h5 style="text-align:center">Casio - Nam</h5>
                                <p style="text-align:center">Đồng Hồ Casio - Nam MTP-1374L-1AVDF...</p>
                            </a>
                        </div>
                    </div>


                </div>

                <div class="reviews">
                    <h3>Đánh Giá</h3>
                    <div class="review">
                        <p><strong>Nguyễn Văn A</strong> - 5 sao</p>
                        <p>Đồng hồ rất đẹp và chất lượng. Tôi khá hài lòng!</p>
                    </div>
                    <div class="review">
                        <p><strong>Trần Thị B</strong> - 4 sao</p>
                        <p>Mẫu mã đẹp, nhưng dây đeo hơi cứng một chút.</p>
                    </div>
                </div>
            </div>
        }
            
          </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

     </body>
</html>