@model Web_bán_hàng__đồ_án_.Models.ViewModel.ProductDetailsVM
@{

    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/StyleCustomer/StyleDetails.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="product-header">
            <div class="product-image-container">
                <img src="@Model.product.ProductImage" alt="@Model.product.ProductName" class="product-image">
            </div>

            <div class="product-info">
                <h1 class="product-title">@Model.product.ProductName</h1>
                <p class="product-id">Mã Số Sản Phẩm: @Model.product.ProductID</p>
                <div class="price">@Model.product.ProductPrice.ToString("C0")</div>

                <div class="button-group">
                    <form action="@Url.Action("AddGiohang", "Product")" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.product.ProductID" />
                        <label for="quantity">Số lượng:</label>
                        <input type="number" name="quantity" id="quantity" value="1" min="1" />
                        <button  type="submit" class="add-to-cart" href="@Url.Action("AddToCart", "Product", new { id = Model.product.ProductID })">THÊM VÀO GIỎ HÀNG</button>
                    </form>

                    <a href="installment_url" class="installment">Trả Góp Qua Thẻ<br>(Visa, Master, JCB)</a>
                </div>
            </div>
        </div>

        <div class="product-details">
            <h3>Chi Tiết Sản Phẩm</h3>
            <div class="product-description">
                @Model.product.ProductDescription
            </div>
        </div>
    </div>

    <div class="reviews">
        <h3>Đánh Giá</h3>
        <div class="review">
            <p><strong>Nguyễn Văn A</strong> - 5 sao</p>
            <p>Đồng hồ rất đẹp và chất lượng. Tôi khá hài lòng!</p>
        </div>
        <div class="review">
            <p><strong>Trần Thị B</strong> - 4 sao</p>
            <p>Mẫu mã đẹp, nhưng dây đeo hơi cứng một chút.</p>
        </div>
    </div>
    </div>
    }

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>