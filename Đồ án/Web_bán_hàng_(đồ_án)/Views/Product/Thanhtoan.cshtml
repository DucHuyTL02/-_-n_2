

@{
    ViewBag.Title = "Thanhtoan";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

@model Web_bán_hàng__đồ_án_.Models.Order
<head>
    <h2>Thanhtoan</h2>
</head>

<body>
    <h2>Thanh Toán Chuyển Khoản</h2>
    <p>Đơn hàng: #@Model.OrderID</p>
    <p>Tổng tiền: @String.Format("{0:0,0} đ", Model.TotalAmount)</p>
    <p>Vui lòng chuyển khoản đến tài khoản:</p>
    <p>Số tài khoản: 123456789</p>
    <p>Ngân hàng: Vietcombank</p>
    <p>Tên tài khoản: Công ty ABC</p>
    <a href="@Url.Action("OrderConfirmation", "Cart", new { orderId = Model.OrderID })" class="btn btn-primary">Xác Nhận Đã Thanh Toán</a>
</body>